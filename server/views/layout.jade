doctype html
html(ng-app="Sonder")
  head
    title= title
    link(type='text/css', rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/css/materialize.min.css', media='screen,projection')
    link(href='//fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
    link(rel='stylesheet', href='/css/style.css')
    meta(name="viewport", content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0")
    script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular.min.js")
    script(type='text/javascript', src='//code.jquery.com/jquery-2.1.1.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/js/materialize.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/prefixfree/1.0.7/prefixfree.min.js')
    script(src="/js/app.js")
  body(ng-controller="SonderController")
    ul#dropdown1.dropdown-content
      if(!user)
        li
          a(href='/signin') Sign in
        li
          a(href='/signup') Sign up
      if(user)
        li
          a(href="/signout") Logout
      li.divider
      li
        a(href='/about') About

    nav.background.flat(role='navigation')
      .nav-wrapper.container(ng-hide="searchBar")
        form
          .input-field
            input#search(type='search', required='', placeholder="Not Working Yet")
            label(for='search')
              i.material-icons search
            i.material-icons close
      .nav-wrapper.container(ng-show="searchBar")
        a#logo.brand-logo.text-darken-2(href='/') Sonder
        ul.right.hide-on-med-and-down
          li
            a(ng-click="showSearchBar()")
              i.material-icons search
          //li
          //  a(href='/explore')
          //    i.material-icons view_module
          if(user)
            li
              a(href="/user/#{user.username}")
                i.material-icons person_pin
          li
            a(href='/upload')
              i.material-icons open_in_browser
          li
            a.dropdown-button(href='#!', data-activates='dropdown1')
              i.material-icons more_vert

    div
        block content


    script.
      $(".dropdown-button").dropdown();